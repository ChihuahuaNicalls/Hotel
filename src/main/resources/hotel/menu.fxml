<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotel.MenuController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Menu principal" />
            <Button fx:id="btnCerrarSesion" onAction="#handleCerrarSesion" text="Cerrar sesion" />
        </HBox>
    </top>
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- Tab Clientes -->
                <Tab fx:id="tabClientes" text="Clientes">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Label text="Cedula:" />
                            <TextField fx:id="txtClienteCedula" prefWidth="150" promptText="Ingrese cedula" />
                            <Label text="Primer Nombre:" />
                            <TextField fx:id="txtClientePrimerNombre" prefWidth="150" promptText="Ingrese nombre" />
                            <Label text="Segundo Nombre:" />
                            <TextField fx:id="txtClienteSegundoNombre" prefWidth="150" promptText="Opcional" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Primer Apellido:" />
                            <TextField fx:id="txtClientePrimerApellido" prefWidth="150" promptText="Ingrese apellido" />
                            <Label text="Segundo Apellido:" />
                            <TextField fx:id="txtClienteSegundoApellido" prefWidth="150" promptText="Opcional" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Calle:" />
                            <TextField fx:id="txtClienteCalle" prefWidth="150" promptText="Ingrese calle" />
                            <Label text="Carrera:" />
                            <TextField fx:id="txtClienteCarrera" prefWidth="150" promptText="Ingrese carrera" />
                            <Label text="Numero:" />
                            <TextField fx:id="txtClienteNumero" prefWidth="100" promptText="Ingrese numero" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Complemento:" />
                            <TextField fx:id="txtClienteComplemento" prefWidth="150" promptText="Apto, Barrio, etc." />
                            <Label text="Telefonos:" />
                            <TextField fx:id="txtClienteTelefonos" prefWidth="200" promptText="Separados por comas" />
                            <Label text="Emails:" />
                            <TextField fx:id="txtClienteEmails" prefWidth="200" promptText="Separados por comas" />
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="btnClienteCrear" onAction="#handleClienteCrear" text="Crear Cliente" />
                            <Button fx:id="btnClienteActualizar" onAction="#handleClienteActualizar" text="Actualizar Cliente" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Clientes Registrados:" />
                        <TableView fx:id="tableClientes" prefHeight="250" />
                    </VBox>
                </Tab>

                <!-- Tab Reservas -->
                <Tab fx:id="tabReservas" text="Reservas">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Label text="Cedula Cliente:" />
                            <TextField fx:id="txtReservaCedulaCliente" prefWidth="150" promptText="Ingrese cedula" />
                            <Label text="Fecha Llegada:" />
                            <TextField fx:id="txtReservaFechaLlegada" prefWidth="150" promptText="DD/MM/AAAA" />
                            <Label text="Id Habitacion:" />
                            <TextField fx:id="txtReservaIdHabitacion" prefWidth="100" promptText="Ingrese Id" />
                            <Label text="Fecha Salida:" />
                            <TextField fx:id="txtReservaCarrera" prefWidth="150" promptText="DD/MM/AAAA" />
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="btnReservaCrear" onAction="#handleReservaCrear" text="Crear Reserva" />
                            <Button fx:id="btnReservaActualizar" onAction="#handleReservaActualizar" text="Actualizar Reserva" />
                            <Button fx:id="btnReservaTerminar" onAction="#handleReservaTerminar" text="Terminar Reserva" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Reservas Registradas:" />
                        <TableView fx:id="tableReservas" prefHeight="250" />
                    </VBox>
                </Tab>

                <!-- Tab Servicios -->
                <Tab fx:id="tabServicios" text="Servicios">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Label text="Id Servicio:" />
                            <TextField fx:id="txtServicioId" prefWidth="100" promptText="Ingrese Id" />
                            <Label text="Nombre:" />
                            <TextField fx:id="txtServicioNombre" prefWidth="180" promptText="Nombre del servicio" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Detalle:" />
                            <TextField fx:id="txtServicioDetalle" prefWidth="260" promptText="Descripcion corta" />
                            <Label text="Precio:" />
                            <TextField fx:id="txtServicioPrecio" prefWidth="120" promptText="Valor en pesos" />
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="btnServicioCrear" onAction="#handleServicioCrear" text="Crear Servicio" />
                            <Button fx:id="btnServicioActualizar" onAction="#handleServicioActualizar" text="Actualizar Servicio" />
                            <Button fx:id="btnServicioEliminar" onAction="#handleServicioEliminar" text="Eliminar Servicio" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Servicios Disponibles:" />
                        <TableView fx:id="tableServicios" prefHeight="320" />
                    </VBox>
                </Tab>

                <!-- Tab Empleados -->
                <Tab fx:id="tabEmpleados" text="Empleados">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Label text="Cedula:" />
                            <TextField fx:id="txtEmpleadoCedula" prefWidth="150" promptText="Ingrese cedula" />
                            <Label text="Primer Nombre:" />
                            <TextField fx:id="txtEmpleadoPrimerNombre" prefWidth="150" promptText="Ingrese nombre" />
                            <Label text="Segundo Nombre:" />
                            <TextField fx:id="txtEmpleadoSegundoNombre" prefWidth="150" promptText="Opcional" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Id area:" />
                            <TextField fx:id="txtEmpleadoArea" prefWidth="100" promptText="Ingrese id area" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Primer Apellido:" />
                            <TextField fx:id="txtEmpleadoPrimerApellido" prefWidth="150" promptText="Ingrese apellido" />
                            <Label text="Segundo Apellido:" />
                            <TextField fx:id="txtEmpleadoSegundoApellido" prefWidth="150" promptText="Opcional" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Calle:" />
                            <TextField fx:id="txtEmpleadoCalle" prefWidth="150" promptText="Ingrese calle" />
                            <Label text="Carrera:" />
                            <TextField fx:id="txtEmpleadoCarrera" prefWidth="150" promptText="Ingrese carrera" />
                            <Label text="Numero:" />
                            <TextField fx:id="txtEmpleadoNumero" prefWidth="100" promptText="Ingrese numero" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Complemento:" />
                            <TextField fx:id="txtEmpleadoComplemento" prefWidth="150" promptText="Apto, Piso, etc." />
                            <Label text="Cargo:" />
                            <TextField fx:id="txtEmpleadoCargo" prefWidth="140" promptText="Recepcion, etc." />
                            <Label text="Telefonos:" />
                            <TextField fx:id="txtEmpleadoTelefonos" prefWidth="150" promptText="Separados por comas" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Emails:" />
                            <TextField fx:id="txtEmpleadoEmails" prefWidth="200" promptText="Separados por comas" />
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="btnEmpleadoCrear" onAction="#handleEmpleadoCrear" text="Crear Empleado" />
                            <Button fx:id="btnEmpleadoActualizar" onAction="#handleEmpleadoActualizar" text="Actualizar Empleado" />
                            <Button fx:id="btnEmpleadoEliminar" onAction="#handleEmpleadoEliminar" text="Eliminar Empleado" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Empleados Registrados:" />
                        <TableView fx:id="tableEmpleados" prefHeight="250" />
                    </VBox>
                </Tab>

                <!-- Tab Asignar Empleados -->
                <Tab fx:id="tabAsignarEmpleados" text="Asignar Empleados">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Label text="Cedula Cliente:" />
                            <TextField fx:id="txtAsignarCedulaCliente" prefWidth="150" promptText="Ingrese cedula" />
                            <Label text="Id Habitacion:" />
                            <TextField fx:id="txtAsignarIdHabitacion" prefWidth="100" promptText="Ingrese Id" />
                            <Label text="Fecha Llegada:" />
                            <TextField fx:id="txtAsignarFechaLlegada" prefWidth="150" promptText="DD/MM/AA" />
                            <Label text="Fecha Uso:" />
                            <TextField fx:id="txtAsignarFechaUso" editable="false" prefWidth="150" promptText="DD/MM/AA" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Cedula Empleado:" />
                            <TextField fx:id="txtAsignarCedulaEmpleado" prefWidth="150" promptText="Ingrese cedula" />
                            <Label text="Id Servicio:" />
                            <TextField fx:id="txtAsignarIdServicio" prefWidth="100" promptText="Ingrese Id" />
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="btnAsignarEmpleado" onAction="#handleAsignarEmpleado" text="Asignar Empleado" />
                            <Button fx:id="btnDesasignarEmpleado" onAction="#handleDesasignarEmpleado" text="Desasignar Empleado" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Asignaciones:" />
                        <TableView fx:id="tableAsignaciones" prefHeight="200" />
                        <Label style="-fx-font-weight: bold;" text="Reservas y Servicios:" />
                        <TableView fx:id="tableReservasAsignar" prefHeight="200" />
                    </VBox>
                </Tab>

                <!-- Tab Habitaciones -->
                <Tab fx:id="tabHabitaciones" text="Habitaciones">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Label text="Id Habitacion:" />
                            <TextField fx:id="txtHabitacionId" prefWidth="150" promptText="Ingrese Id" />
                            <Button fx:id="btnLiberarHabitacion" onAction="#handleLiberarHabitacion" text="Liberar Habitacion" />
                            <Button fx:id="btnTerminarMantenimiento" onAction="#handleTerminarMantenimiento" text="Terminar Mantenimiento" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Estado de Habitaciones:" />
                        <TableView fx:id="tableHabitaciones" prefHeight="350" />
                    </VBox>
                </Tab>

                <!-- Tab Adicionar Servicios -->
                <Tab fx:id="tabAdicionServicios" text="Adicionar Servicios">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Label text="Cedula Cliente:" />
                            <TextField fx:id="txtServicioCedulaCliente" prefWidth="150" promptText="Ingrese cedula" />
                            <Label text="ID Habitacion:" />
                            <TextField fx:id="txtServicioIdHabitacion" prefWidth="100" promptText="Ingrese Id" />
                            <Label text="Fecha Llegada:" />
                            <TextField fx:id="txtServicioFechaLlegada" prefWidth="180" promptText="DD/MM/AA" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Id Servicio:" />
                            <TextField fx:id="txtServicioIdServicio" prefWidth="100" promptText="Ingrese Id" />
                            <Button fx:id="btnAnadirServicio" onAction="#handleAnadirServicio" text="AÃ±adir Servicio" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Servicios de Reservaciones:" />
                        <TableView fx:id="tableServiciosReservaciones" prefHeight="300" />
                        <Label style="-fx-font-weight: bold;" text="Servicios Disponibles:" />
                        <TableView fx:id="tableServiciosLista" prefHeight="200" />
                    </VBox>
                </Tab>

                <!-- Tab Consultas -->
                <Tab fx:id="tabConsultas" text="Consultas">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10">
                            <Button fx:id="btnDisponibilidadHabitaciones" onAction="#handleVerDisponibilidad" text="Ver Disponibilidad de Habitaciones" />
                            <Button fx:id="btnConsultaGeneral" onAction="#handleConsultaGeneral" text="Consulta General" />
                        </HBox>
                        <Label style="-fx-font-weight: bold;" text="Resultados:" />
                        <TableView fx:id="tableConsultas" prefHeight="350" />
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
